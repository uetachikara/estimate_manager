<div class="card">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h5 mb-0">取引先詳細</h1>
      <span class="text-muted small">ID: <%= @client.id %></span>
    </div>

    <dl class="row mb-0">
      <dt class="col-sm-3">取引先名</dt>
      <dd class="col-sm-9"><%= @client.name %></dd>

      <dt class="col-sm-3">担当者</dt>
      <dd class="col-sm-9"><%= @client.contact_name.presence || "—" %></dd>

      <dt class="col-sm-3">電話</dt>
      <dd class="col-sm-9"><%= @client.phone.presence || "—" %></dd>

      <dt class="col-sm-3">メール</dt>
      <dd class="col-sm-9">
        <% if @client.email.present? %>
          <%= mail_to @client.email, @client.email, class: "text-decoration-none" %>
        <% else %>
          —
        <% end %>
      </dd>
    </dl>
  </div>

  <div class="card-footer d-flex gap-2">
    <%= link_to "編集", edit_client_path(@client), class: "btn btn-outline-primary btn-sm" %>
    <%= link_to "戻る", clients_path, class: "btn btn-outline-secondary btn-sm" %>

    <div class="ms-auto">
      <%= button_to "削除",
          client_path(@client),
          method: :delete,
          data: { turbo_confirm: "削除しますか？" },
          class: "btn btn-outline-danger btn-sm" %>
    </div>
  </div>
</div>
