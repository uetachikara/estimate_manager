<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card mt-5">
        <div class="card-body">
          <h1 class="h5 text-center mb-4">ログイン</h1>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "パスワード", class: "form-label" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>

            <div class="d-grid">
              <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<hr class="my-4">

<div class="text-center small">
  <div class="mb-2">
    <%= link_to "新規登録はこちら", new_user_registration_path, class: "text-decoration-none" %>
  </div>

  <div>
    <%= link_to "パスワードをお忘れですか？", new_user_password_path, class: "text-decoration-none" %>
  </div>
</div>
