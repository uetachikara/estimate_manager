<div class="d-flex align-items-center justify-content-between mb-3">
  <h1 class="h4 mb-0">案件一覧</h1>
  <%= link_to "新規登録", new_project_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped table-hover table-sm align-middle">
  <thead>
    <tr>
      <th>案件名</th>
      <th>ステータス</th>
      <th>取引先</th>
      <th class="text-end"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |p| %>
      <tr>
        <td><%= link_to p.name, p, class: "text-decoration-none" %></td>
        <td><%= I18n.t("activerecord.attributes.project.statuses.#{p.status}") %></td>
        <td><%= p.client&.name %></td>
        <td class="text-end">
          <%= link_to "編集", edit_project_path(p), class: "btn btn-sm btn-outline-secondary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

