<div class="card">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h5 mb-0">案件詳細</h1>
      <span class="badge <%= @project.status_badge_class %>">
        <%= @project.status_label %>
      </span>
    </div>

    <dl class="row mb-0">
      <dt class="col-sm-3">案件名</dt>
      <dd class="col-sm-9"><%= @project.name %></dd>

      <dt class="col-sm-3">取引先</dt>
      <dd class="col-sm-9"><%= @project.client&.name %></dd>

      <dt class="col-sm-3">メモ</dt>
      <dd class="col-sm-9"><%= simple_format(@project.note) %></dd>
    </dl>
  </div>

  <div class="card-footer d-flex gap-2">
    <%= link_to "編集", edit_project_path(@project), class: "btn btn-outline-primary btn-sm" %>
    <%= link_to "戻る", projects_path, class: "btn btn-outline-secondary btn-sm" %>
  </div>
</div>
