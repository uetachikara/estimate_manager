<%= form_with(model: quote) do |form| %>
  <% if quote.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
        <% quote.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :status, "ステータス", class: "form-label" %>
    <%= form.select :status,
        Quote.statuses.keys.map { |k| [I18n.t("activerecord.attributes.quote.statuses.#{k}"), k] },
        {},
        class: "form-select" %>
  </div>

  <hr>
  <h6>見積明細</h6>

  <div data-controller="quote-items">
    <div data-quote-items-target="list">
      <%= form.fields_for :quote_items do |f| %>
        <%= render "quote_item_fields", f: f %>
      <% end %>
    </div>

    <template data-quote-items-target="template">
      <%= form.fields_for :quote_items, QuoteItem.new, child_index: "NEW_RECORD" do |f| %>
        <%= render "quote_item_fields", f: f %>
      <% end %>
    </template>

    <button type="button"
            class="btn btn-outline-primary btn-sm mt-2"
            data-action="quote-items#add">
      ＋ 明細を追加
    </button>
  </div>

  <div class="mb-3">
    <%= form.label :issued_on, "発行日", class: "form-label" %>
    <%= form.date_field :issued_on, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :note, "備考", class: "form-label" %>
    <%= form.text_area :note, class: "form-control", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :project_id, "案件", class: "form-label" %>
    <%= form.collection_select :project_id, @projects, :id, :name,
        { prompt: "選択してください" },
        { class: "form-select" } %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit "保存", class: "btn btn-primary" %>
    <%= link_to "戻る", quotes_path, class: "btn btn-outline-secondary" %>
  </div>

<% end %>
