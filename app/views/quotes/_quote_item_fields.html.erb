<div class="row g-2 mb-2" data-quote-items-target="item">
  <div class="col-md-5">
    <%= f.text_field :description, placeholder: "内容", class: "form-control" %>
  </div>

  <div class="col-md-2">
    <%= f.number_field :quantity, min: 1, class: "form-control" %>
  </div>

  <div class="col-md-3">
    <%= f.number_field :unit_price, min: 0, step: 1, class: "form-control" %>
  </div>

  <div class="col-md-2">
    <%= f.hidden_field :_destroy %>
    <button type="button"
            class="btn btn-outline-danger btn-sm"
            data-action="quote-items#remove">
      削除
    </button>
  </div>
</div>
