<div class="card">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h5 mb-0">見積詳細</h1>
      <span class="badge <%= @quote.status_badge_class %>">
        <%= @quote.status_label %>
      </span>
    </div>

    <dl class="row mb-0">
      <dt class="col-sm-3">見積番号</dt>
      <dd class="col-sm-9"><%= @quote.quote_no %></dd>

      <dt class="col-sm-3">案件</dt>
      <dd class="col-sm-9"><%= @quote.project&.name %></dd>

      <dt class="col-sm-3">小計</dt>
      <dd class="col-sm-9"><%= number_to_currency(@quote.subtotal, unit: "¥") %></dd>

      <dt class="col-sm-3">消費税</dt>
      <dd class="col-sm-9"><%= number_to_currency(@quote.tax, unit: "¥") %></dd>

      <dt class="col-sm-3">合計</dt>
      <dd class="col-sm-9 fw-bold"><%= number_to_currency(@quote.total, unit: "¥") %></dd>

      <dt class="col-sm-3">備考</dt>
      <dd class="col-sm-9"><%= simple_format(@quote.note) %></dd>
    </dl>
    <hr class="my-4">

<h6 class="mb-3">見積明細</h6>

<table class="table table-sm align-middle">
  <thead class="table-light">
    <tr>
      <th>内容</th>
      <th class="text-end">数量</th>
      <th class="text-end">単価</th>
      <th class="text-end">小計</th>
    </tr>
  </thead>
  <tbody>
    <% @quote.quote_items.each do |item| %>
      <tr>
        <td><%= item.description %></td>
        <td class="text-end"><%= item.quantity %></td>
        <td class="text-end">
          <%= number_to_currency(item.unit_price, unit: "¥") %>
        </td>
        <td class="text-end">
          <%= number_to_currency(item.quantity * item.unit_price, unit: "¥") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>

  <div class="card-footer d-flex gap-2">
    <%= link_to "編集", edit_quote_path(@quote), class: "btn btn-outline-primary btn-sm" %>
    <%= link_to "戻る", quotes_path, class: "btn btn-outline-secondary btn-sm" %>
  </div>
</div>
